@model List<OrusFinancas.Models.InsightFinanceiro>

@{
    ViewData["Title"] = "Insights Financeiros";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"> Insights Financeiros</h2>
    <div>
        <form method="post" asp-action="GerarInsight" class="d-inline">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-lightbulb"></i> Gerar Insight
            </button>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var insight in Model)
        {
            <div class="col-12 mb-4">
                <div class="card @(insight.DataGeracao.Date == DateTime.Today ? "border-success" : "")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">
                                @insight.Titulo
                                @if (insight.DataGeracao.Date == DateTime.Today)
                                {
                                    <span class="badge bg-success ms-2">Hoje</span>
                                }
                            </h5>
                            <small class="text-muted">@insight.DataGeracao.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <p class="card-text">@insight.Detalhe</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                @if (insight.DataGeracao.Date == DateTime.Today)
                                {
                                    <i class="bi bi-star-fill text-warning me-1"></i>
                                    <small class="text-success fw-bold">Insight de hoje</small>
                                }
                                else if (insight.DataGeracao.Date >= DateTime.Today.AddDays(-7))
                                {
                                    <i class="bi bi-clock me-1"></i>
                                    <small class="text-muted">Esta semana</small>
                                }
                                else
                                {
                                    <i class="bi bi-calendar me-1"></i>
                                    <small class="text-muted">@insight.DataGeracao.ToString("dd/MM/yyyy")</small>
                                }
                            </div>
                            <a asp-action="Details" asp-route-id="@insight.Id" class="btn btn-sm btn-outline-primary">
                                Ver detalhes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginação -->
    @if (ViewBag.TotalPaginas > 1)
    {
    <nav aria-label="Navegação de página">
            <ul class="pagination justify-content-center">
                @if (ViewBag.PaginaAtual > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pagina="@(ViewBag.PaginaAtual - 1)">Anterior</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                    </li>
                }

                @if (ViewBag.PaginaAtual < ViewBag.TotalPaginas)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pagina="@(ViewBag.PaginaAtual + 1)">Próximo</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-lightbulb display-1 text-muted"></i>
            <h4 class="mt-3">Nenhum insight disponível</h4>
            <p class="text-muted">
                Os insights são gerados automaticamente com base na análise dos seus dados financeiros.
                <br>
                Adicione algumas transações e orçamentos para começar a receber insights personalizados.
            </p>
            <form method="post" asp-action="GerarInsight" class="d-inline">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-lightbulb-fill"></i> Gerar Primeiro Insight
                </button>
            </form>
        </div>
    </div>
}