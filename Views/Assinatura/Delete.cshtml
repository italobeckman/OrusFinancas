@model OrusFinancas.Models.Assinatura

@{
    ViewData["Title"] = "Excluir Assinatura";
}

<h1>Excluir Assinatura</h1>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i>
    Tem certeza de que deseja excluir esta assinatura? Esta ação não pode ser desfeita.
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Servico</h5>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Valor Mensal:</strong> <span class="text-danger">@Model.ValorMensal.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</span></p>
                <p><strong>Data de Início:</strong> @Model.DataAssinatura.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="col-md-6">
                <p><strong>Status:</strong> 
                    @if (Model.Ativa)
                    {
                        <span class="badge bg-success">Ativa</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inativa</span>
                    }
                </p>
                @if (Model.Ativa)
                {
                    <p><strong>Próximo Vencimento:</strong> @Model.ProximoVencimento.ToString("dd/MM/yyyy")</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirmar Exclusão
        </button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancelar
    </a>
</div>