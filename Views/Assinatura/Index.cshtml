@model IEnumerable<OrusFinancas.Models.Assinatura>

@{
    ViewData["Title"] = "Assinaturas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Minhas Assinaturas</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nova Assinatura
    </a>
</div>

@{
    var assinaturasAtivas = Model.Where(a => a.Ativa).ToList();
    var assinaturasInativas = Model.Where(a => !a.Ativa).ToList();
    var totalMensal = ViewBag.TotalMensal as decimal? ?? 0m;
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-center bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Assinaturas Ativas</h5>
                <h3>@assinaturasAtivas.Count</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center bg-warning text-dark">
            <div class="card-body">
                <h5 class="card-title">Inativas</h5>
                <h3>@assinaturasInativas.Count</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Gasto Mensal Total</h5>
                <h3>@totalMensal.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</h3>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Serviço</th>
                            <th>Conta</th>
                            <th>Valor Mensal</th>
                            <th>Data de Início</th>
                            <th>Próximo Vencimento</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var assinatura in Model.OrderBy(a => !a.Ativa).ThenBy(a => a.Servico))
                        {
                            <tr class="@(!assinatura.Ativa ? "table-secondary" : "")">
                                <td>
                                    <strong>@assinatura.Servico</strong>
                                    @if (!assinatura.Ativa)
                                    {
                                        <small class="text-muted">(Inativa)</small>
                                    }
                                </td>
                                <td>
                                    @if (assinatura.Conta != null)
                                    {
                                        <span class="text-muted">@assinatura.Conta.NomeBanco</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Conta padrão</span>
                                    }
                                </td>
                                <td class="@(assinatura.Ativa ? "text-danger" : "text-muted")">
                                    @assinatura.ValorMensal.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))
                                </td>
                                <td>@assinatura.DataAssinatura.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (assinatura.Ativa)
                                    {
                                        var diasAteVencimento = (assinatura.ProximoVencimento - DateTime.Today).Days;
                                        <span class="@(diasAteVencimento <= 7 ? "text-warning fw-bold" : "")">
                                            @assinatura.ProximoVencimento.ToString("dd/MM/yyyy")
                                        </span>
                                        @if (diasAteVencimento <= 7 && diasAteVencimento > 0)
                                        {
                                            <br><small class="text-warning">(@diasAteVencimento dias)</small>
                                        }
                                        else if (diasAteVencimento <= 0)
                                        {
                                            <br><small class="text-danger fw-bold">Vencida!</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (assinatura.Ativa)
                                    {
                                        <span class="badge bg-success">Ativa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inativa</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @if (assinatura.Ativa)
                                        {
                                            <form asp-action="GerarDespesa" asp-route-id="@assinatura.Id" method="post" class="d-inline" title="Gerar despesa agora">
                                                <button type="submit" class="btn btn-outline-info btn-sm" onclick="return confirm('Gerar despesa de @assinatura.ValorMensal.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR")) para @assinatura.Servico?')">
                                                    <i class="bi bi-credit-card"></i>
                                                </button>
                                            </form>
                                        }
                                        <form asp-action="ToggleAtiva" asp-route-id="@assinatura.Id" method="post" class="d-inline">
                                            @if (assinatura.Ativa)
                                            {
                                                <button type="submit" class="btn btn-outline-warning btn-sm" title="Desativar">
                                                    <i class="bi bi-pause"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-outline-success btn-sm" title="Ativar">
                                                    <i class="bi bi-play"></i>
                                                </button>
                                            }
                                        </form>
                                        <a asp-action="Edit" asp-route-id="@assinatura.Id" class="btn btn-outline-primary btn-sm" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@assinatura.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-arrow-repeat display-1 text-muted"></i>
                <h4 class="mt-3">Nenhuma assinatura cadastrada</h4>
                <p class="text-muted">Gerencie suas assinaturas recorrentes como Netflix, Spotify, Academia, etc.</p>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Criar Primeira Assinatura
                </a>
            </div>
        }
    </div>
</div>

@if (assinaturasAtivas.Any())
{
    <div class="mt-4">
        <div class="card bg-light">
            <div class="card-body">
                <h6 class="card-title">Dicas</h6>
                <ul class="list-unstyled small mb-0">
                    <li> <strong>Gerar Despesa:</strong> Clique no ícone de cartão para gerar uma despesa manual</li>
                    <li> <strong>Automático:</strong> O sistema gera despesas automaticamente no vencimento</li>
                    <li> <strong>Orçamentos:</strong> As despesas de assinaturas são contabilizadas nos orçamentos</li>
                    <li> <strong>Relatórios:</strong> Veja o impacto das assinaturas nos relatórios mensais</li>
                </ul>
            </div>
        </div>
    </div>
}