@model OrusFinancas.Models.Assinatura

@{
    ViewData["Title"] = "Editar Assinatura";
}

<h1>Editar Assinatura</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UsuarioId" />
            
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label asp-for="Servico" class="form-label">Nome do Serviço *</label>
                    <input asp-for="Servico" class="form-control" />
                    <span asp-validation-for="Servico" class="text-danger"></span>
                </div>
                
                <div class="col-md-4 mb-3">
                    <label asp-for="ValorMensal" class="form-label">Valor Mensal *</label>
                    <div class="input-group">
                        <span class="input-group-text">R$</span>
                        <input asp-for="ValorMensal" class="form-control money" type="text" />
                    </div>
                    <span asp-validation-for="ValorMensal" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DataAssinatura" class="form-label">Data de Início *</label>
                    <input asp-for="DataAssinatura" class="form-control" type="date" />
                    <span asp-validation-for="DataAssinatura" class="text-danger"></span>
                    <div class="form-text">Define o dia do mês em que a cobrança ocorrerá</div>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="ContaId" class="form-label">Conta (Opcional)</label>
                    <select asp-for="ContaId" class="form-select">
                        <option value="">Conta padrão</option>
                        @if (ViewBag.Contas != null)
                        {
                            @foreach (var conta in (List<OrusFinancas.Models.Conta>)ViewBag.Contas)
                            {
                                <option value="@conta.Id" selected="@(conta.Id == Model.ContaId)">
                                    @conta.NomeBanco - @conta.Tipo
                                </option>
                            }
                        }
                    </select>
                    <div class="form-text">Escolha de qual conta será debitada a assinatura</div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-check">
                        <input asp-for="Ativa" class="form-check-input" />
                        <label asp-for="Ativa" class="form-check-label">Assinatura ativa</label>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Salvar Alterações
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-warning">
            <div class="card-body">
                <h6 class="card-title">Atenção</h6>
                <p class="card-text small mb-0">
                    Alterar a data de início afetará o cálculo dos próximos vencimentos.
                    Mudanças na conta afetarão futuras despesas automáticas.
                </p>
            </div>
        </div>
        
        <div class="card bg-info text-white mt-3">
            <div class="card-body">
                <h6 class="card-title"><i class="bi bi-info-circle"></i> Histórico</h6>
                <p class="card-text small mb-0">
                    As despesas já geradas não serão afetadas pelas alterações feitas aqui.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}