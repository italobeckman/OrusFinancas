@model OrusFinancas.Models.Orcamento

@{
    ViewData["Title"] = "Editar Orçamento";
}

<h1>Editar Orçamento</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UsuarioId" />
            
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome do Orçamento *</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="ValorLimite" class="form-label">Valor Limite Mensal *</label>
                <div class="input-group">
                    <span class="input-group-text">R$</span>
                    <input asp-for="ValorLimite" class="form-control money" type="text" placeholder="0,00" />
                </div>
                <span asp-validation-for="ValorLimite" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Salvar Alterações
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-warning">
            <div class="card-body">
                <h6 class="card-title">Atenção</h6>
                <p class="card-text small mb-0">
                    Alterar o valor limite afetará os alertas e cálculos de progresso.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}