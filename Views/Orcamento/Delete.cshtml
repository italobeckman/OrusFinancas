@model OrusFinancas.Models.Orcamento

@{
    ViewData["Title"] = "Excluir Orçamento";
}

<h1>Excluir Orçamento</h1>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i>
    Tem certeza de que deseja excluir este orçamento? Esta ação não pode ser desfeita.
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Valor Limite:</strong> <span class="text-success">@Model.ValorLimite.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</span></p>
            </div>
            <div class="col-md-6">
                <p><strong>ID:</strong> @Model.Id</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirmar Exclusão
        </button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancelar
    </a>
</div>