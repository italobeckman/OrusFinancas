<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Órus Finanças</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrusFinancas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    Órus Finanças
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-wallet2"></i> Financeiro
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Conta" asp-action="Index">
                                        <i class="bi bi-credit-card"></i> Contas
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Categoria" asp-action="Index">
                                        <i class="bi bi-tags"></i> Categorias
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Tag" asp-action="Index">
                                        <i class="bi bi-tag-fill"></i> Tags
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Transacao" asp-action="Index">
                                        <i class="bi bi-arrow-left-right"></i> Transações
                                    </a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-graph-up"></i> Planejamento
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Orcamento" asp-action="Index">
                                        <i class="bi bi-pie-chart"></i> Orçamentos
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Assinatura" asp-action="Index">
                                        <i class="bi bi-arrow-repeat"></i> Assinaturas
                                    </a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-file-earmark-bar-graph"></i> Relatórios
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Relatorio" asp-action="Extrato">
                                        <i class="bi bi-list-task"></i> Extrato
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Relatorio" asp-action="GraficoGastosPorCategoria">
                                        <i class="bi bi-graph-up"></i> Gastos por Categoria
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Relatorio" asp-action="BalancoMensal">
                                        <i class="bi bi-bar-chart"></i> Balanço Mensal
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Relatorio" asp-action="RelatorioAssinaturas">
                                        <i class="bi bi-arrow-repeat"></i> Rel. Assinaturas
                                    </a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Insight" asp-action="Index">
                                    <i class="bi bi-lightbulb"></i> Insights
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><h6 class="dropdown-header">Olá, @User.Identity.Name!</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Sair
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="py-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light border-top mt-5">
        <div class="container-fluid py-3">
            <div class="text-center text-muted">
                &copy; 2025 - Órus Finanças - Sistema de Controle Financeiro Pessoal
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
