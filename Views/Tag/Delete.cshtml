@model OrusFinancas.Models.Tag

@{
    ViewData["Title"] = "Excluir Tag";
    var quantidadeTransacoes = ViewBag.QuantidadeTransacoes ?? 0;
    var corTag = !string.IsNullOrEmpty(Model.Cor) ? Model.Cor : "#6c757d";
}

<div class="mb-4">
    <h1 class="display-6 fw-bold text-danger">
        <i class="bi bi-exclamation-triangle me-2"></i>Excluir Tag
    </h1>
    <p class="text-muted">Tem certeza que deseja excluir esta tag?</p>
</div>

<div class="card border-danger shadow-sm">
    <div class="card-header bg-danger text-white">
        <i class="bi bi-exclamation-octagon"></i> Atenção: Ação Irreversível
    </div>
    <div class="card-body">
        <div class="mb-4">
            <h4 class="mb-3">
                <span class="badge rounded-pill me-2" 
                      style="background-color: @corTag; width: 16px; height: 16px; padding: 0;">
                </span>
                @Model.Nome
            </h4>
            
            <dl class="row">
                @if (!string.IsNullOrEmpty(Model.Descricao))
                {
                    <dt class="col-sm-3">Descrição:</dt>
                    <dd class="col-sm-9">@Model.Descricao</dd>
                }
                
                <dt class="col-sm-3">Cor:</dt>
                <dd class="col-sm-9">
                    <span class="badge" style="background-color: @corTag; padding: 8px 16px;">
                        @corTag
                    </span>
                </dd>
                
                <dt class="col-sm-3">Transações:</dt>
                <dd class="col-sm-9">
                    <strong>@quantidadeTransacoes</strong> transação@(quantidadeTransacoes != 1 ? "ões" : "") associada@(quantidadeTransacoes != 1 ? "s" : "")
                </dd>
            </dl>
        </div>
        
        @if (quantidadeTransacoes > 0)
        {
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                <strong>Importante:</strong> Esta tag está sendo usada em <strong>@quantidadeTransacoes</strong> transação@(quantidadeTransacoes != 1 ? "ões" : ""). 
                As associações serão removidas, mas as transações não serão excluídas.
            </div>
        }
        
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Confirmar Exclusão
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
