@model dynamic

@{
    ViewData["Title"] = "Relatório de Assinaturas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">?? Relatório de Assinaturas</h2>
    <a asp-controller="Assinatura" asp-action="Create" class="btn btn-success">Nova Assinatura</a>
</div>

<!-- Resumo -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Assinaturas Ativas</h5>
                <h2 class="card-text">@Model.AssinaturasAtivas.Count</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">Gasto Mensal</h5>
                <h2 class="card-text">@Model.TotalMensal.ToString("C")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-danger">
            <div class="card-body">
                <h5 class="card-title">Gasto Anual</h5>
                <h2 class="card-text">@Model.TotalAnual.ToString("C")</h2>
            </div>
        </div>
    </div>
</div>

<!-- Lista de Assinaturas Ativas -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Assinaturas Ativas</h5>
    </div>
    <div class="card-body">
        @if (Model.AssinaturasAtivas != null && Model.AssinaturasAtivas.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Serviço</th>
                            <th>Valor Mensal</th>
                            <th>Valor Anual</th>
                            <th>Data Assinatura</th>
                            <th>Próximo Vencimento</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var assinatura in Model.AssinaturasAtivas)
                        {
                            <tr>
                                <td>
                                    <strong>@assinatura.Servico</strong>
                                    @if (assinatura.Ativa)
                                    {
                                        <span class="badge bg-success ms-2">Ativa</span>
                                    }
                                </td>
                                <td>@assinatura.ValorMensal.ToString("C")</td>
                                <td>@((assinatura.ValorMensal * 12).ToString("C"))</td>
                                <td>@assinatura.DataAssinatura.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @assinatura.ProximoVencimento.ToString("dd/MM/yyyy")
                                    @if (assinatura.ProximoVencimento <= DateTime.Today.AddDays(3))
                                    {
                                        <span class="badge bg-warning text-dark ms-2">Vence em breve</span>
                                    }
                                </td>
                                <td>
                                    <a asp-controller="Assinatura" asp-action="Edit" asp-route-id="@assinatura.Id" 
                                       class="btn btn-sm btn-outline-primary">Editar</a>
                                    <a asp-controller="Assinatura" asp-action="Delete" asp-route-id="@assinatura.Id" 
                                       class="btn btn-sm btn-outline-danger">Cancelar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <p class="text-muted">Você não possui assinaturas ativas no momento.</p>
                <a asp-controller="Assinatura" asp-action="Create" class="btn btn-primary">Adicionar Primeira Assinatura</a>
            </div>
        }
    </div>
</div>

<!-- Análise de Impacto -->
@if (Model.AssinaturasAtivas != null && Model.AssinaturasAtivas.Count > 0)
{
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">?? Análise de Impacto</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="alert alert-info">
                        <h6><i class="bi bi-info-circle"></i> Distribuição dos Gastos</h6>
                        <ul class="mb-0">
                            @{
                                var listaAssinaturas = new List<OrusFinancas.Models.Assinatura>();
                                foreach(var ass in Model.AssinaturasAtivas)
                                {
                                    listaAssinaturas.Add(ass);
                                }
                                var top3Assinaturas = listaAssinaturas
                                    .OrderByDescending(a => a.ValorMensal)
                                    .Take(3);
                            }
                            @foreach (var assinatura in top3Assinaturas)
                            {
                                var percentual = Model.TotalMensal > 0 ? (assinatura.ValorMensal / Model.TotalMensal) * 100 : 0;
                                <li>@assinatura.Servico: @percentual.ToString("F1")% (@assinatura.ValorMensal.ToString("C"))</li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-warning">
                        <h6><i class="bi bi-exclamation-triangle"></i> Dicas de Economia</h6>
                        <ul class="mb-0">
                            <li>Revise assinaturas que não usa há mais de 30 dias</li>
                            <li>Compare preços com concorrentes anualmente</li>
                            <li>Considere planos familiares para economia</li>
                            @if (Model.TotalMensal > 500)
                            {
                                <li><strong>Seus gastos com assinaturas são altos. Avalie o que realmente precisa!</strong></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}