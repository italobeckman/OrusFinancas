@model IEnumerable<OrusFinancas.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Minhas Categorias</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nova Categoria
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Nome</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var categoria in Model)
                        {
                            <tr>
                                <td>@categoria.Nome</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@categoria.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@categoria.Id" class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-eye"></i> Detalhes
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@categoria.Id" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Excluir
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-folder2-open display-1 text-muted"></i>
                <h4 class="mt-3">Nenhuma categoria cadastrada</h4>
                <p class="text-muted">Comece criando sua primeira categoria para organizar suas transações.</p>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Criar Primeira Categoria
                </a>
            </div>
        }
    </div>
</div>