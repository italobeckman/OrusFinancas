@model OrusFinancas.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<h1>Excluir Categoria</h1>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i>
    Tem certeza de que deseja excluir esta categoria? Esta ação não pode ser desfeita.
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <p class="text-muted">ID: @Model.Id</p>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirmar Exclusão
        </button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancelar
    </a>
</div>