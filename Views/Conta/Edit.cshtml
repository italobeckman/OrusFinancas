@model OrusFinancas.Models.Conta
@using OrusFinancas.Models

@{
    ViewData["Title"] = "Editar Conta";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">?? Editar Conta</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UsuarioId" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NomeBanco" class="form-label">Banco/Instituição</label>
                                <select asp-for="NomeBanco" class="form-select" asp-items="Html.GetEnumSelectList<Bancos>()">
                                    <option value="">Selecione o banco</option>
                                </select>
                                <span asp-validation-for="NomeBanco" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Tipo" class="form-label">Tipo da Conta</label>
                                <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<TipoConta>()">
                                    <option value="">Selecione o tipo</option>
                                </select>
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="SaldoInicial" class="form-label">Saldo Inicial</label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="SaldoInicial" class="form-control" type="number" step="0.01" placeholder="0,00" />
                                </div>
                                <div class="form-text">O saldo da conta no momento da criação</div>
                                <span asp-validation-for="SaldoInicial" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Saldo Atual</label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input type="text" class="form-control" value="@Model.SaldoAtual.ToString("F2")" readonly />
                                </div>
                                <div class="form-text">Calculado automaticamente com base nas transações</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <div>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Salvar Alterações
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i> Excluir Conta
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">?? Dicas de Edição</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="bi bi-info-circle text-info me-2"></i>
                        <small>O saldo atual é calculado automaticamente</small>
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                        <small>Altere o saldo inicial apenas se necessário</small>
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-shield-check text-success me-2"></i>
                        <small>Suas transações não serão afetadas</small>
                    </li>
                    <li>
                        <i class="bi bi-link-45deg text-primary me-2"></i>
                        <small>Esta conta pode estar vinculada a transações</small>
                    </li>
                </ul>
            </div>
        </div>
        
        @if (Model.SaldoAtual != Model.SaldoInicial)
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">?? Resumo da Conta</h6>
                </div>
                <div class="card-body">
                    @{
                        var variacao = Model.SaldoAtual - Model.SaldoInicial;
                    }
                    <div class="d-flex justify-content-between mb-2">
                        <small>Saldo Inicial:</small>
                        <strong>@Model.SaldoInicial.ToString("C")</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <small>Saldo Atual:</small>
                        <strong class="@(Model.SaldoAtual >= 0 ? "text-success" : "text-danger")">
                            @Model.SaldoAtual.ToString("C")
                        </strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <small>Variação:</small>
                        <strong class="@(variacao >= 0 ? "text-success" : "text-danger")">
                            @(variacao >= 0 ? "+" : "")@variacao.ToString("C")
                        </strong>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}