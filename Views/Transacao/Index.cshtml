@model IEnumerable<OrusFinancas.Models.Transacao>
@using OrusFinancas.Extensions

@{
    ViewData["Title"] = "Transações";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Minhas Transações</h1>
    <a asp-action="Create" class="btn btn-success">
    <i class="bi bi-plus-circle"></i> Nova Transação
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Data</th>
                            <th>Descrição</th>
                            <th>Categoria/Tipo</th>
                            <th>Conta</th>
                            <th>Tags</th>
                            <th>Tipo</th>
                            <th>Valor</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transacao in Model)
                        {
                            <tr>
                                <td>@transacao.DataTransacao.ToString("dd/MM/yyyy")</td>
                                <td>@transacao.Descricao</td>
                                <td>
                                    @if (transacao is OrusFinancas.Models.Receita receita)
                                    {
                                        <span class="text-muted small">@receita.TipoReceita.GetDisplayName()</span>
                                    }
                                    else
                                    {
                                        @(transacao.Categoria?.Nome ?? "Sem categoria")
                                    }
                                </td>
                                <td>
                                    @if (transacao.Conta?.NomeBanco != null)
                                    {
                                        @transacao.Conta.NomeBanco.GetDisplayName()
                                    }
                                    else
                                    {
                                        <span>N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (transacao.TransacoesTags != null && transacao.TransacoesTags.Any())
                                    {
                                        @foreach (var tt in transacao.TransacoesTags)
                                        {
                                            var corTag = !string.IsNullOrEmpty(tt.Tag.Cor) ? tt.Tag.Cor : "#6c757d";
                                            <span class="badge rounded-pill me-1" 
                                                  style="background-color: @corTag;" 
                                                  title="@tt.Tag.Descricao">
                                                @tt.Tag.Nome
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <small class="text-muted">-</small>
                                    }
                                </td>
                                <td>
                                    @if (transacao is OrusFinancas.Models.Receita)
                                    {
                                        <span class="badge bg-success">Receita</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Despesa</span>
                                    }
                                </td>
                                <td class="@(transacao is OrusFinancas.Models.Receita ? "text-success" : "text-danger") fw-bold">
                                    @transacao.Valor.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@transacao.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@transacao.Id" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Resumo -->
            <hr>
            <div class="row">
                <div class="col-md-4">
                    <div class="text-center">
                        <h5 class="text-success">Total Receitas</h5>
                        <h4 class="text-success">@(Model.OfType<OrusFinancas.Models.Receita>().Sum(r => r.Valor).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR")))</h4>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <h5 class="text-danger">Total Despesas</h5>
                        <h4 class="text-danger">@(Model.OfType<OrusFinancas.Models.Despesa>().Sum(d => d.Valor).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR")))</h4>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        @{
                            var totalReceitas = Model.OfType<OrusFinancas.Models.Receita>().Sum(r => r.Valor);
                            var totalDespesas = Model.OfType<OrusFinancas.Models.Despesa>().Sum(d => d.Valor);
                            var saldo = totalReceitas - totalDespesas;
                        }
                        <h5 class="@(saldo >= 0 ? "text-success" : "text-danger")">Saldo</h5>
                        <h4 class="@(saldo >= 0 ? "text-success" : "text-danger")">@saldo.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</h4>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-receipt display-1 text-muted"></i>
                <h4 class="mt-3">Nenhuma transação encontrada</h4>
                <p class="text-muted">Comece registrando sua primeira receita ou despesa.</p>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Criar Primeira Transação
                </a>
            </div>
        }
    </div>
</div>