@model OrusFinancas.Models.ViewModels.TransacaoViewModel

@{
    ViewData["Title"] = "Nova Transação";
}

<h1>Nova Transação</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post" id="transacaoForm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TipoTransacao" class="form-label">Tipo *</label>
                    <select asp-for="TipoTransacao" class="form-select" asp-items="Html.GetEnumSelectList<OrusFinancas.Models.ViewModels.TipoTransacao>()" id="tipoTransacao">
                        <option value="">Selecione o tipo</option>
                    </select>
                    <span asp-validation-for="TipoTransacao" class="text-danger"></span>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="DataTransacao" class="form-label">Data *</label>
                    <input asp-for="DataTransacao" class="form-control" type="date" />
                    <span asp-validation-for="DataTransacao" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Descricao" class="form-label">Descrição *</label>
                <input asp-for="Descricao" class="form-control" placeholder="Descreva a transação..." />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Valor" class="form-label">Valor *</label>
                    <div class="input-group">
                        <span class="input-group-text">R$</span>
                        <input asp-for="Valor" class="form-control money" type="text" placeholder="0,00" />
                    </div>
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="ContaId" class="form-label">Conta *</label>
                    <select asp-for="ContaId" class="form-select">
                        <option value="">Selecione uma conta</option>
                        @foreach (var conta in Model.Contas)
                        {
                            <option value="@conta.Id">@conta.NomeBanco - @conta.Tipo</option>
                        }
                    </select>
                    <span asp-validation-for="ContaId" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Campos específicos para receita -->
            <div class="row receita-fields" style="display: none;">
                <div class="col-md-6 mb-3">
                    <label asp-for="TipoReceita" class="form-label">Tipo de Receita *</label>
                    <select asp-for="TipoReceita" class="form-select" asp-items="Html.GetEnumSelectList<OrusFinancas.Models.TipoReceita>()">
                        <option value="">Selecione o tipo de receita</option>
                    </select>
                    <span asp-validation-for="TipoReceita" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Campos específicos para despesa -->
            <div class="row despesa-fields" style="display: none;">
                <div class="col-md-6 mb-3">
                    <label asp-for="CategoriaId" class="form-label">Categoria *</label>
                    <select asp-for="CategoriaId" class="form-select">
                        <option value="">Selecione uma categoria</option>
                        @foreach (var categoria in Model.Categorias)
                        {
                            <option value="@categoria.Id">@categoria.Nome</option>
                        }
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="AssinaturaId" class="form-label">Assinatura (Opcional)</label>
                    <select asp-for="AssinaturaId" class="form-select">
                        <option value="">Nenhuma assinatura</option>
                        @foreach (var assinatura in Model.Assinaturas)
                        {
                            <option value="@assinatura.Id">@assinatura.Servico - @assinatura.ValorMensal.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</option>
                        }
                    </select>
                    <span asp-validation-for="AssinaturaId" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Salvar Transação
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h6 class="card-title">Dicas</h6>
                <div class="receita-tips" style="display: none;">
                    <ul class="list-unstyled small">
                        <li><strong>Receitas:</strong> Não precisam de categoria</li>
                        <li>Use o tipo certo: Salário, Freelance, Investimentos, etc.</li>
                        <li>Seja específico na descrição</li>
                    </ul>
                </div>
                <div class="despesa-tips" style="display: none;">
                    <ul class="list-unstyled small">
                        <li><strong>Despesas:</strong> Categoria é obrigatória</li>
                        <li>Associe a assinaturas recorrentes quando aplicável</li>
                        <li>Use categorias para organizar melhor</li>
                    </ul>
                </div>
                <div class="default-tips">
                    <ul class="list-unstyled small">
                        <li><strong>Receitas:</strong> Salários, vendas, investimentos</li>
                        <li><strong>Despesas:</strong> Compras, contas, pagamentos</li>
                        <li>Escolha o tipo primeiro para ver as opções</li>
                    </ul>
                </div>
            </div>
        </div>
        
        @if (!Model.Categorias.Any())
        {
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Atenção!</strong> Você precisa ter pelo menos uma categoria cadastrada para criar despesas.
                <br>
                <a asp-controller="Categoria" asp-action="Create" class="btn btn-sm btn-outline-warning mt-2">
                    Criar Categoria
                </a>
            </div>
        }
        
        @if (!Model.Contas.Any())
        {
            <div class="alert alert-danger mt-3">
                <i class="bi bi-exclamation-circle"></i>
                <strong>Atenção!</strong> Você precisa ter pelo menos uma conta cadastrada.
                <br>
                <a asp-controller="Conta" asp-action="Create" class="btn btn-sm btn-outline-danger mt-2">
                    Criar Conta
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
        <script>
        $(document).ready(function() {
            // Função para mostrar/esconder campos baseado no tipo
            function toggleFields() {
                const tipoSelecionado = $('#tipoTransacao').val();
                
                $('.receita-fields, .despesa-fields').hide();
                $('.receita-tips, .despesa-tips').hide();
                $('.default-tips').show();
                
                if (tipoSelecionado === '1') { // Receita
                    $('.receita-fields').show();
                    $('.receita-tips').show();
                    $('.default-tips').hide();
                } else if (tipoSelecionado === '2') { // Despesa
                    $('.despesa-fields').show();
                    $('.despesa-tips').show();
                    $('.default-tips').hide();
                }
            }
            
            // Executar na mudança do tipo
            $('#tipoTransacao').change(toggleFields);
            
            // Executar no carregamento para manter o estado
            toggleFields();
        });
    </script>
}