@model OrusFinancas.ViewModels.HomeDashboardViewModel

@{
    ViewData["Title"] = "Dashboard | Órus Finanças";
    var isNewUser = Model.ReceitasTotal == 0 && Model.DespesasTotal == 0 && Model.ProximasAssinaturas.Count == 0;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6 fw-bold text-success mb-1">
            <i class="bi bi-house-fill me-2"></i>Dashboard
        </h1>
        <p class="text-muted mb-0">Bem-vindo de volta! Aqui está o resumo das suas finanças.</p>
    </div>
    <div class="text-end">
        <small class="text-muted">
            <i class="bi bi-calendar3"></i> @DateTime.Today.ToString("dddd, dd 'de' MMMM 'de' yyyy", new System.Globalization.CultureInfo("pt-BR"))
        </small>
    </div>
</div>

@if (isNewUser)
{
    <div class="alert alert-info alert-dismissible fade show border-0 shadow-sm" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-3 fs-4"></i>
            <div class="flex-grow-1">
                <h5 class="alert-heading mb-1">Bem-vindo ao Órus Finanças! 🎉</h5>
                <p class="mb-2">Para começar a usar o sistema de controle financeiro:</p>
                <ol class="mb-0 ps-3">
                    <li><a href="@Url.Action("Index", "Conta")" class="alert-link">Crie sua primeira conta</a> (banco, carteira, etc.)</li>
                    <li><a href="@Url.Action("Index", "Categoria")" class="alert-link">Configure categorias</a> para suas transações</li>
                    <li><a href="@Url.Action("Create", "Transacao")" class="alert-link">Registre suas primeiras transações</a></li>
                </ol>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
            <div class="flex-grow-1">
                <h6 class="alert-heading mb-1">⚠️ Problema no Sistema</h6>
                <p class="mb-2">@TempData["Error"]</p>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-arrow-clockwise"></i> Tentar Novamente
                    </a>
                    <a href="@Url.Action("Diagnostico", "Home")" class="btn btn-outline-warning btn-sm">
                        <i class="bi bi-tools"></i> Diagnóstico
                    </a>
                </div>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-5">
    <div class="col-lg-8">
        @* RESUMO FINANCEIRO MELHORADO *@
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-gradient" style="background: linear-gradient(135deg, #28a745, #20c997);">
                <h5 class="card-title text-white mb-0 d-flex align-items-center">
                    <i class="bi bi-graph-up-arrow me-2"></i>Resumo Financeiro - @DateTime.Today.ToString("MMMM/yyyy", new System.Globalization.CultureInfo("pt-BR"))
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="row text-center">
                    <div class="col-md-4 mb-3">
                        <div class="p-3 rounded" style="background-color: #e8f5e8;">
                            <i class="bi bi-arrow-up-circle-fill text-success display-6 mb-2"></i>
                            <h3 class="text-success mb-1">@Model.ReceitasTotal.ToString("C")</h3>
                            <p class="text-muted mb-0">Receitas</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="p-3 rounded" style="background-color: #ffeaea;">
                            <i class="bi bi-arrow-down-circle-fill text-danger display-6 mb-2"></i>
                            <h3 class="text-danger mb-1">@Model.DespesasTotal.ToString("C")</h3>
                            <p class="text-muted mb-0">Despesas</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="p-3 rounded @(Model.BalancoTotal >= 0 ? "bg-light-success" : "bg-light-danger")" style="background-color: @(Model.BalancoTotal >= 0 ? "#e8f5e8" : "#ffeaea");">
                            <i class="bi bi-@(Model.BalancoTotal >= 0 ? "trophy-fill text-success" : "exclamation-triangle-fill text-danger") display-6 mb-2"></i>
                            <h3 class="@(Model.BalancoTotal >= 0 ? "text-success" : "text-danger") mb-1">
                                @Model.BalancoTotal.ToString("C")
                            </h3>
                            <p class="text-muted mb-0 fw-bold">Saldo do Mês</p>
                        </div>
                    </div>
                </div>
                
                @if (Model.MaiorDespesaValor > 0)
                {
                    <hr class="my-4">
                    <div class="alert alert-info border-0 d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-3 fs-4"></i>
                        <div>
                            <strong>Maior despesa do mês:</strong><br>
                            <span class="text-danger fw-bold">@Model.MaiorDespesaDescricao</span> - @Model.MaiorDespesaValor.ToString("C")
                        </div>
                    </div>
                }
                else if (!isNewUser)
                {
                    <hr class="my-4">
                    <div class="text-center text-muted">
                        <i class="bi bi-calendar-x display-4 mb-2"></i>
                        <p class="mb-0">Nenhuma transação registrada neste mês</p>
                    </div>
                }
            </div>
        </div>

        @* ORÇAMENTOS MELHORADOS *@
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="card-title mb-0 d-flex align-items-center">
                    <i class="bi bi-pie-chart-fill me-2"></i>Controle de Orçamentos
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Orcamentos.Count > 0)
                {
                    @foreach (var orcamento in Model.Orcamentos)
                    {
                        var percentualUso = orcamento.Limite > 0 ? (orcamento.Gasto / orcamento.Limite * 100) : 0;
                        var progressBarClass = percentualUso < 70 ? "bg-success" : percentualUso < 90 ? "bg-warning" : "bg-danger";
                        var statusIcon = percentualUso < 70 ? "check-circle-fill text-success" : percentualUso < 90 ? "exclamation-circle-fill text-warning" : "x-circle-fill text-danger";
                        
                        <div class="mb-4 p-3 border rounded">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-@statusIcon me-2"></i>
                                    <span class="fw-semibold">@orcamento.CategoriaNome</span>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">@orcamento.Gasto.ToString("C") de @orcamento.Limite.ToString("C")</small><br>
                                    <span class="badge @(percentualUso >= 100 ? "bg-danger" : percentualUso >= 80 ? "bg-warning" : "bg-primary")">
                                        @percentualUso.ToString("F0")%
                                    </span>
                                </div>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar @progressBarClass" role="progressbar" 
                                     style="width: @Math.Min(percentualUso, 100)%;" 
                                     aria-valuenow="@percentualUso" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                            @if (percentualUso >= 90)
                            {
                                <small class="text-danger mt-1 d-block">
                                    <i class="bi bi-exclamation-triangle"></i> 
                                    @if (percentualUso >= 100)
                                    {
                                        <span>Orçamento ultrapassado!</span>
                                    }
                                    else
                                    {
                                        <span>Próximo do limite!</span>
                                    }
                                </small>
                            }
                        </div>
                    }
                    <div class="text-end mt-3">
                        <a asp-controller="Orcamento" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-gear"></i> Gerenciar Orçamentos
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-pie-chart display-1 text-muted mb-3"></i>
                        <h5>Nenhum orçamento definido</h5>
                        <p class="text-muted mb-3">
                            Defina orçamentos para suas categorias e tenha maior controle sobre seus gastos.
                        </p>
                        <a asp-controller="Orcamento" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Criar Primeiro Orçamento
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        @* INSIGHT FINANCEIRO MELHORADO *@
        <div class="card text-white shadow-lg mb-4" style="background: linear-gradient(135deg, #17a2b8, #007bff);">
            <div class="card-body p-4">
                <h5 class="card-title d-flex align-items-center mb-3">
                    <i class="bi bi-lightbulb-fill me-2 fs-4"></i>Insight Financeiro
                </h5>
                <div class="mb-4">
                    <p class="card-text fs-6 mb-0" style="line-height: 1.6;">
                        @Model.InsightDiario
                    </p>
                </div>
                <div class="d-grid gap-2">
                    <a asp-controller="Insight" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-collection"></i> Ver Todos os Insights
                    </a>
                    @if (!isNewUser)
                    {
                        <form asp-controller="Insight" asp-action="GerarInsight" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-light btn-sm w-100">
                                <i class="bi bi-arrow-clockwise"></i> Gerar Novo Insight
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        @* ASSINATURAS MELHORADAS *@
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-dark text-white">
                <h5 class="card-title mb-0 d-flex align-items-center">
                    <i class="bi bi-arrow-repeat me-2"></i>Próximas Recorrências
                </h5>
            </div>
            <div class="card-body">
                @if (Model.ProximasAssinaturas.Count > 0)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var assinatura in Model.ProximasAssinaturas)
                        {
                            var diasRestantes = (new DateTime(DateTime.Today.Year, DateTime.Today.Month, assinatura.DataAssinatura.Day) - DateTime.Today).Days;
                            if (diasRestantes < 0) 
                            {
                                diasRestantes += DateTime.DaysInMonth(DateTime.Today.Year, DateTime.Today.Month);
                            }
                            
                            <div class="list-group-item border-0 px-0 py-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-semibold">@assinatura.Servico</h6>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3"></i>
                                            @if (diasRestantes == 0)
                                            {
                                                <span class="text-danger fw-bold">Vence hoje!</span>
                                            }
                                            else if (diasRestantes <= 3)
                                            {
                                                <span class="text-warning fw-bold">Vence em @diasRestantes dia(s)</span>
                                            }
                                            else
                                            {
                                                <span>Vence em @diasRestantes dia(s)</span>
                                            }
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <span class="text-danger fw-bold fs-6">@assinatura.ValorMensal.ToString("C")</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-end pt-3">
                        <a asp-controller="Assinatura" asp-action="Index" class="btn btn-outline-dark btn-sm">
                            <i class="bi bi-gear"></i> Gerenciar Assinaturas
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-calendar-check display-4 text-muted mb-3"></i>
                        <p class="text-muted mb-3">Nenhuma assinatura ativa encontrada.</p>
                        <a asp-controller="Assinatura" asp-action="Create" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-plus-circle"></i> Adicionar Assinatura
                        </a>
                    </div>
                }
            </div>
        </div>

        @* AÇÕES RÁPIDAS *@
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightning-charge"></i> Ações Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Transacao" asp-action="Create" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle"></i> Nova Transação
                    </a>
                    <a asp-controller="Relatorio" asp-action="Extrato" class="btn btn-info btn-sm">
                        <i class="bi bi-list-task"></i> Ver Extrato
                    </a>
                    <a asp-controller="Relatorio" asp-action="GraficoGastosPorCategoria" class="btn btn-warning btn-sm">
                        <i class="bi bi-graph-up"></i> Relatórios
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Adicionar alguma interatividade se necessário
        document.addEventListener('DOMContentLoaded', function() {
            // Adicionar tooltips nos elementos de orçamento
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            // Auto-dismiss do alerta de novo usuário após 10 segundos
            @if (isNewUser)
            {
                <text>
                setTimeout(function() {
                    var alert = document.querySelector('.alert-info');
                    if (alert) {
                        var bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }
                }, 10000);
                </text>
            }
        });
    </script>
}